    <script>
        // Debug info
        function updateDebugInfo() {
            const debugEl = document.getElementById('debug-info');
            if (debugEl) {
                debugEl.innerHTML = `
                    React: ${typeof React}<br>
                    ReactDOM: ${typeof ReactDOM}<br>
                    tasklistMfe: ${typeof tasklistMfe}<br>
                    Exported: ${typeof window.tasklistMfe}<br>
                    Bootstrap: ${typeof window.tasklistMfe?.bootstrap}
                `;
            }
        }
        
        // Check periodically
        setInterval(updateDebugInfo, 1000);
        updateDebugInfo();
        
        console.log('ðŸ”µ Standalone Mode Globals:', {
